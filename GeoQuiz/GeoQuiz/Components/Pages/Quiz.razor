@layout QuizLayout
@inject NavigationManager navigation
@inject CurrentQuizStateService QuizState
@inject IJSRuntime JS
@page "/Quiz"
@using QuizaphFrontend.Components.ChildComponents
@using QuizaphFrontend.Services
@using global::Models.Enums

    <MudPaper Elevation="0" MaxWidth="MaxWidth.Large" Style="position: relative; border-radius: 10px;">
    @if (CurrentQuiz?.QuizType == QuizType.ImageQuiz)
    {
        <!-- Render image quiz component here -->
    }
    else if (CurrentQuiz?.QuizType == QuizType.WorldCountriesQuiz)
    {
        <CascadingValue Value="CurrentQuiz">
            <CountriesOfTheWorldComponent />
        </CascadingValue>
    }
    </MudPaper>

@code {

    public QuizaphBackend.Models.Quiz? CurrentQuiz { get; set; }
    private ElementReference paperContainerRef;

    protected override void OnInitialized()
    {
        CurrentQuiz ??= QuizState.CurrentQuizInfo;
    }
}
 